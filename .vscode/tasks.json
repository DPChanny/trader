{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Front: Start Dev Server",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/trader-app"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*",
          "endsPattern": "Local:.*http://localhost:\\d+"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "frontend"
      }
    },
    {
      "label": "Back: Start API Server",
      "type": "shell",
      "command": "conda activate trader && uvicorn main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}/trader-api"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Started server process",
          "endsPattern": "Application startup complete"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false,
        "group": "backend"
      }
    },
    {
      "label": "Both: Start All Servers",
      "dependsOn": ["Front: Start Dev Server", "Back: Start API Server"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    },
    {
      "label": "Front: Stop Dev Server",
      "type": "shell",
      "command": "echo ${input:terminate}",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Back: Stop API Server",
      "type": "shell",
      "command": "echo ${input:terminate}",
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Both: Stop All Servers",
      "type": "shell",
      "command": "echo 'Please manually terminate running tasks from the Terminal panel'",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate"
    }
  ]
}
